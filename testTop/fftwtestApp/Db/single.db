record (aao, "$(P)$(R)inp-real") {
  field(DTYP, "FFTW")
  field(OUT, "@$(P) input-real trigger=y")
  field(FTVL, "DOUBLE")
  field(NELM, "$(TIME_N)")
  field(TPRO, "15")
}

