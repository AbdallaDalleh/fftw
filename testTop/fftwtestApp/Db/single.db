# single setup for FFT

record (ao, "$(P)$(R)fsample") {
  field(DTYP, "FFTW")
  field(OUT, "@$(P) sample-freq")
  field(VAL, "1e3")
  field(PINI, "YES")
}

record (aao, "$(P)$(R)inp-real") {
  field(DTYP, "FFTW")
  field(OUT, "@$(P) input-real trigger=y")
  field(FTVL, "DOUBLE")
  field(NELM, "128")
  field(TPRO, "15")
}

record (aai, "$(P)$(R)out-real") {
  field(DTYP, "FFTW")
  field(INP, "@$(P) output-real")
  field(FTVL, "DOUBLE")
  field(NELM, "65")
  field(SCAN, "I/O Intr")
  field(TPRO, "15")
}

record (aai, "$(P)$(R)out-imag") {
  field(DTYP, "FFTW")
  field(INP, "@$(P) output-imag")
  field(FTVL, "DOUBLE")
  field(NELM, "65")
  field(SCAN, "I/O Intr")
  field(TPRO, "15")
}

record (aai, "$(P)$(R)fscale") {
  field(DTYP, "FFTW")
  field(INP, "@$(P) output-fscale")
  field(FTVL, "DOUBLE")
  field(NELM, "65")
  field(SCAN, "I/O Intr")
  field(TPRO, "15")
}

record (aai, "$(P)$(R)window") {
  field(DTYP, "FFTW")
